{
  "name": "fast-track-tools",
  "version": "1.0.0",
  "description": "Enterprise platform with 31 interactive business transformation tools",
  "author": "Fast Track Ltd.",
  "license": "PROPRIETARY",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "test": "npm run test --workspace=backend",
    "test:integration": "npm run test:integration --workspace=backend",
    "test:e2e": "npm run test:e2e --workspace=backend",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "lint": "npm run lint --workspace=backend",
    "lint:fix": "npm run lint:fix --workspace=backend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,html}\"",
    "db:migrate": "npm run migrate --workspace=backend",
    "db:migrate:rollback": "npm run migrate:rollback --workspace=backend",
    "db:seed": "npm run seed --workspace=backend",
    "db:reset": "npm run db:migrate:rollback && npm run db:migrate && npm run db:seed",
    "openspec:init": "openspec init",
    "openspec:generate": "openspec generate --registry config/tool-registry.json --output backend/",
    "deploy:staging": "echo 'Deploy to staging' && npm run build && npm run deploy:railway:staging",
    "deploy:production": "echo 'Deploy to production' && npm run build && npm run deploy:railway:production",
    "clean": "rm -rf node_modules backend/node_modules dist backend/dist .cache",
    "clean:all": "npm run clean && rm -rf logs uploads temp coverage test-results"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasttrack/fast-track-tools.git"
  },
  "keywords": [
    "fast-track",
    "business-tools",
    "digital-transformation",
    "enterprise-platform",
    "business-strategy",
    "saas",
    "postgresql",
    "react",
    "nodejs"
  ],
  "config": {
    "toolCount": 31,
    "modules": 5
  },
  "funding": {
    "type": "private",
    "url": "https://fasttrack.com"
  }
}

name: Dependency Tests

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]
  schedule:
    # Run daily at 2am UTC
    - cron: '0 2 * * *'
  workflow_dispatch: # Manual trigger

jobs:
  dependency-tests:
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'
          cache-dependency-path: tests/dependencies/package-lock.json

      - name: Install dependencies
        working-directory: tests/dependencies
        run: npm ci

      - name: Install Puppeteer dependencies (Ubuntu)
        run: |
          sudo apt-get update
          sudo apt-get install -y \
            libnss3 \
            libatk-bridge2.0-0 \
            libdrm2 \
            libxkbcommon0 \
            libgbm1 \
            libasound2

      - name: Run dependency tests
        working-directory: tests/dependencies
        env:
          HEADLESS: true
          SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
          SUPABASE_ANON_KEY: ${{ secrets.SUPABASE_ANON_KEY }}
          TEST_USER_ID: ${{ secrets.TEST_USER_ID }}
          NODE_ENV: ci
        run: npm run test:all
        continue-on-error: true

      - name: Upload test reports
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: dependency-test-reports
          path: |
            tests/dependencies/dependency-report.md
            tests/dependencies/dependency-report.json
            tests/dependencies/dependency-report.html
            tests/dependencies/test-matrix.md
          retention-days: 30

      - name: Upload screenshots on failure
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: test-failure-screenshots
          path: tests/dependencies/screenshots/
          retention-days: 7

      - name: Read test results
        id: test-results
        if: always()
        run: |
          if [ -f tests/dependencies/dependency-report.json ]; then
            PASS_RATE=$(jq -r '.summary.passRate' tests/dependencies/dependency-report.json)
            PASSED=$(jq -r '.summary.passed' tests/dependencies/dependency-report.json)
            TOTAL=$(jq -r '.summary.total' tests/dependencies/dependency-report.json)
            echo "pass_rate=$PASS_RATE" >> $GITHUB_OUTPUT
            echo "passed=$PASSED" >> $GITHUB_OUTPUT
            echo "total=$TOTAL" >> $GITHUB_OUTPUT
          else
            echo "pass_rate=0" >> $GITHUB_OUTPUT
            echo "passed=0" >> $GITHUB_OUTPUT
            echo "total=6" >> $GITHUB_OUTPUT
          fi

      - name: Comment PR with results
        if: github.event_name == 'pull_request' && always()
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            const passRate = '${{ steps.test-results.outputs.pass_rate }}';
            const passed = '${{ steps.test-results.outputs.passed }}';
            const total = '${{ steps.test-results.outputs.total }}';

            let reportContent = '';
            try {
              reportContent = fs.readFileSync('tests/dependencies/dependency-report.md', 'utf8');
            } catch (e) {
              reportContent = '‚ö†Ô∏è Report file not found';
            }

            const body = `## üîó Dependency Test Results

            **Pass Rate:** ${passRate}% (${passed}/${total} chains)

            <details>
            <summary>View Full Report</summary>

            ${reportContent}

            </details>

            [Download detailed reports as artifacts](https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }})
            `;

            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: body
            });

      - name: Annotate failures
        if: failure()
        run: |
          echo "::error title=Dependency Tests Failed::One or more dependency chain tests failed. Check test reports for details."

      - name: Check pass threshold
        if: always()
        run: |
          PASS_RATE=${{ steps.test-results.outputs.pass_rate }}
          THRESHOLD=95

          echo "Pass rate: ${PASS_RATE}%"
          echo "Threshold: ${THRESHOLD}%"

          if [ "$PASS_RATE" -ge "$THRESHOLD" ]; then
            echo "‚úÖ Pass rate meets threshold (${PASS_RATE}% >= ${THRESHOLD}%)"
            exit 0
          else
            echo "‚ùå Pass rate below threshold (${PASS_RATE}% < ${THRESHOLD}%)"
            exit 1
          fi

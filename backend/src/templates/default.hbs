<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{tool.name}} - Export</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      color: #333;
      background: #fff;
      padding: 20px;
    }

    .header {
      border-bottom: 3px solid #0066cc;
      padding-bottom: 20px;
      margin-bottom: 30px;
    }

    .header h1 {
      color: #0066cc;
      font-size: 28px;
      margin-bottom: 10px;
    }

    .header .meta {
      color: #666;
      font-size: 14px;
    }

    .section {
      margin-bottom: 30px;
      page-break-inside: avoid;
    }

    .section-title {
      font-size: 20px;
      color: #0066cc;
      border-bottom: 2px solid #e0e0e0;
      padding-bottom: 8px;
      margin-bottom: 15px;
    }

    .field-group {
      margin-bottom: 20px;
      padding: 15px;
      background: #f9f9f9;
      border-left: 4px solid #0066cc;
      border-radius: 4px;
    }

    .field-label {
      font-weight: 600;
      color: #555;
      margin-bottom: 5px;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .field-value {
      color: #333;
      font-size: 16px;
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .dependency-list {
      list-style: none;
    }

    .dependency-item {
      padding: 10px;
      margin-bottom: 10px;
      background: #fff;
      border: 1px solid #e0e0e0;
      border-radius: 4px;
    }

    .dependency-item .field-id {
      font-family: monospace;
      font-size: 12px;
      color: #666;
      margin-bottom: 5px;
    }

    .dependency-item .source-tool {
      font-size: 12px;
      color: #0066cc;
      margin-bottom: 5px;
    }

    .footer {
      margin-top: 50px;
      padding-top: 20px;
      border-top: 1px solid #e0e0e0;
      text-align: center;
      color: #999;
      font-size: 12px;
    }

    @media print {
      body {
        padding: 0;
      }

      .page-break {
        page-break-before: always;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>{{tool.name}}</h1>
    <div class="meta">
      <strong>Sprint {{tool.sprint_number}}</strong> |
      Exported: {{generated_at}} |
      Version: {{submission.version}}
    </div>
  </div>

  <div class="section">
    <h2 class="section-title">Submission Data</h2>
    {{#each submission.data}}
      <div class="field-group">
        <div class="field-label">{{@key}}</div>
        <div class="field-value">{{this}}</div>
      </div>
    {{/each}}
  </div>

  {{#if dependencies}}
    <div class="section page-break">
      <h2 class="section-title">Dependencies</h2>
      <ul class="dependency-list">
        {{#each dependencies}}
          <li class="dependency-item">
            <div class="field-id">{{@key}}</div>
            <div class="source-tool">Source: {{this.source_tool}}</div>
            <div class="field-value">
              {{#if this.available}}
                {{this.value}}
              {{else}}
                <em>Not available</em>
              {{/if}}
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="footer">
    Generated by Fast Track Tools Platform<br>
    {{tool.slug}} | {{submission.status}}
  </div>
</body>
</html>

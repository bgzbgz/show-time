# Fast Track Tools - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
APP_NAME=fast-track-tools
APP_PORT=3000
APP_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fasttrack
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database URL (alternative to individual params)
DATABASE_URL=postgresql://postgres:password@localhost:5432/fasttrack

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your_session_secret_change_this_in_production
SESSION_MAX_AGE=86400000

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_PATH=/api
API_VERSION=v1
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# =============================================================================
# LEARNWORLDS INTEGRATION
# =============================================================================
LEARNWORLDS_API_URL=https://api.learnworlds.com/v2
LEARNWORLDS_API_KEY=your_learnworlds_api_key
LEARNWORLDS_API_SECRET=your_learnworlds_api_secret
LEARNWORLDS_SCHOOL_ID=your_school_id
LEARNWORLDS_SSO_SECRET=your_sso_secret

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local or cloud storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# =============================================================================
# EMAIL
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Email Templates
EMAIL_FROM_NAME=Fast Track Program
EMAIL_FROM_ADDRESS=noreply@fasttrack.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Google Analytics
GA_TRACKING_ID=

# LogRocket
LOGROCKET_APP_ID=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI (if using AI features)
OPENAI_API_KEY=

# Stripe (if implementing payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_INSIGHTS=false
FEATURE_REAL_TIME_COLLABORATION=false
FEATURE_MOBILE_APP=false
FEATURE_ADVANCED_ANALYTICS=false

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Development tools
DEBUG=fasttrack:*
ENABLE_QUERY_LOGGING=false
ENABLE_SWAGGER_UI=true
MOCK_EXTERNAL_APIS=false

# Hot reload
WATCH_MODE=true

# =============================================================================
# SECURITY
# =============================================================================
# Security headers
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true

# Content Security Policy
CSP_ENABLED=true
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# PERFORMANCE
# =============================================================================
# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_TOOL_METADATA_TTL=86400

# Query optimization
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=300

# =============================================================================
# LOCALIZATION
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de
DEFAULT_TIMEZONE=UTC

# =============================================================================
# TESTING
# =============================================================================
# Test Database
TEST_DB_NAME=fasttrack_test
TEST_DB_URL=postgresql://postgres:password@localhost:5432/fasttrack_test

# Test Configuration
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Railway (if using Railway)
RAILWAY_ENVIRONMENT=staging
RAILWAY_PROJECT_ID=

# Vercel (if using Vercel for frontend)
VERCEL_TOKEN=
VERCEL_PROJECT_ID=

# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
